@model MVCBlog.Core.Entities.SocietyMonthlyFee

@Html.HiddenFor(model => model.Created)
@Html.HiddenFor(model => model.CreatedUser)
@Html.HiddenFor(model => model.AspNetUserId)
@Html.HiddenFor(model => model.IsClosed)
@Html.HiddenFor(model => model.Active)

<div class="form-group">
    @Html.LabelFor(model => model.AspNetUser.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-4">
        @Html.DisplayFor(model => model.AspNetUser.FullName)@ViewBag.FullName
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Period, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-4">
        @Html.EditorFor(model => model.Period, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
        @Html.ValidationMessageFor(model => model.Period, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-4">
        @{ Html.EnableClientValidation(false); }
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return OnlyDecimal(event);" } })
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.PaymentDate, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-4">
        <div class="input-group date" id="datetimepicker1">
            @{ Html.EnableClientValidation(false); }
            @Html.EditorFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return OnlyDate(event);" } })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        @Html.ValidationMessageFor(model => model.PaymentDate, "", new { @class = "text-danger" })
    </div>
</div>